{
  "name": "naruto-shelter-map",
  "version": "1.0.0",
  "private": true,
  "description": "徳島県鳴門市とその隣接地域の避難所を地図上に可視化するPWAアプリ",
  "author": "Yusaku Matsukawa",
  "license": "MIT",
  "packageManager": "pnpm@10.29.2",
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "validate:shelters": "tsx scripts/validate-shelters.ts",
    "geocode:shelters": "tsx scripts/geocode-shelters.ts",
    "release:patch": "pnpm version patch --git-tag-version true",
    "release:minor": "pnpm version minor --git-tag-version true",
    "release:major": "pnpm version major --git-tag-version true",
    "release:check": "node -e \"const pkg = require('./package.json'); const tag = require('child_process').execSync('git describe --tags --abbrev=0 2>/dev/null || echo', { encoding: 'utf-8' }).trim().replace(/^v/, ''); if (tag && pkg.version !== tag) { console.error('❌ Version mismatch: package.json=' + pkg.version + ', tag=' + tag); process.exit(1); } else { console.log('✅ Version matches: ' + pkg.version); }\""
  },
  "dependencies": {
    "@mlc-ai/web-llm": "^0.2.81",
    "@tanstack/react-virtual": "^3.13.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.575.0",
    "maplibre-gl": "^5.18.0",
    "radix-ui": "^1.4.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-map-gl": "^8.1.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.5.0",
    "vaul": "^1.1.2",
    "wouter": "^3.9.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@tailwindcss/vite": "^4.2.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/geojson": "^7946.0.16",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "jsdom": "^28.1.0",
    "shadcn": "^3.8.5",
    "tailwindcss": "^4.2.0",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18"
  },
  "volta": {
    "node": "24.13.1"
  }
}
