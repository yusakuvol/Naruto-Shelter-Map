  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@biomejs/biome": "^1.9.0",
    "typescript": "^5.6.0",
    "tailwindcss": "^4.0.0",
    "@playwright/test": "^1.48.0",
